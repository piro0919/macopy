{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": [
        "renderer/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "main",
    "renderer"
  ]
}
